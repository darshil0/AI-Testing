[flake8]
# Align with Black's default line length
max-line-length = 88

# E203: whitespace before ':' (incompatible with Black)
# E501: line too long (handled by max-line-length)
# W503: line break before binary operator (standard modern practice)
extend-ignore = E203, E501, W503

# Exclude directories that don't need linting
exclude =
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    venv,
    .tox,
    .eggs
